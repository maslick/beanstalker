{
    "AWSEBDockerrunVersion": "2",
    "volumes": [
        {
            "name": "nginx-conf",
            "host": {
                "sourcePath": "/var/app/current/nginx"
            }
        }
    ],
    "containerDefinitions": [
        {	
            "name": "dev",
            "image": "gcr.io/google-samples/hello-app:1.0",
            "essential": true,
            "memory": 128,
            "environment": [
                {
                    "name": "PORT",
                    "value": 5000
                }
            ]
        },	
        {	
            "name": "prod",
            "image": "gcr.io/google-samples/hello-app:1.0",
            "essential": true,
            "memory": 128,
            "environment": [
                {
                    "name": "PORT",
                    "value": 5000
                }
            ]
        },
        {
            "name": "nginx",
            "image": "nginx:stable",
            "essential": true,
            "memory": 128,
            "mountPoints": [
                {
                    "sourceVolume": "nginx-conf",
                    "containerPath": "/etc/nginx/conf.d"
                },
                {
                    "sourceVolume": "awseb-logs-nginx",
                    "containerPath": "/var/log/nginx"
                }
            ],
            "portMappings": [
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ],
            "links": [
                "dev", "prod"
            ]
        }
    ]
}